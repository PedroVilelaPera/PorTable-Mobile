<resources>

    <style name="Theme.PorTable" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/courier_prime</item>
        <item name="fontFamily">@font/courier_prime</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/rpg_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/rpg_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHighlight">#666666</item>
    </style>

    <style name="Login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/blk_background_wht_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#666</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AbaStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/courier_prime</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>